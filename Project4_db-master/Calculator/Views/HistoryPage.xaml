<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.HistoryPage"
             Title="HistoryPage" BackgroundColor="{DynamicResource PrimaryColor}" >

    <VerticalStackLayout>
        
        <Label Text="List of Operations performed" TextColor="{StaticResource DarkSlate}"  FontAttributes="Bold" FontSize="30"></Label>
        
        <ListView ItemsSource="{Binding history}"
                  BackgroundColor="{StaticResource Cyan100Accent}"
                  WidthRequest="450"
                  Margin="18"
                  HorizontalOptions="Start">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding expression}"></Label>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>